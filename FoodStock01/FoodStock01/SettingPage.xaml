<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodStock01.SettingPage">

    <ContentPage.Resources>
    <ResourceDictionary>
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="DodgerBlue" />
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HeightRequest" Value="60" />
            <Setter Property="WidthRequest" Value="200" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
    </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.iOS>
                0, 20, 0, 0
            </OnPlatform.iOS>
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout Margin="20,10,20,30">
            <Grid Margin="0, 0, 0, 10" VerticalOptions="Start">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="通知日数"
                    Grid.Column="0" Grid.Row="0"/>

                <Picker
                    Grid.Column="1" Grid.Row="0" 
                    HorizontalOptions="End"
                    WidthRequest="100"
                    Title="通知日数"
                    x:Name="SetPicker"
                    SelectedIndexChanged="SetPicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                        <x:String>7</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="日前"
                       Grid.Column="2" Grid.Row="0"
                       HorizontalOptions="Start"/>
            </Grid>

            <Button Text="保存" 
                    VerticalOptions="Center"
                    x:Name="Set_Save"
                    Clicked="Set_Save_Clicked"/>

            <Button Text="最新の通知日数" 
                    VerticalOptions="Center"
                    x:Name="Select_Max"
                    Clicked="Select_Max_Clicked"/>

                <Label Text="通知時間帯を選択してください"/>
                <TimePicker Format="H"
                            x:Name="TPicker"
                            IsEnabled="True"
                            PropertyChanged="TPicker_PropertyChanged"/>

                <Button Text="通知時間を保存" 
                        VerticalOptions="Center"
                        x:Name="Time_Button"
                        Clicked="Time_Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>